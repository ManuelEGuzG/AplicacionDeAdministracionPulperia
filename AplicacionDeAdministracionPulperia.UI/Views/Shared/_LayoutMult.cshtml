@*
    Layout simplificado para InvCore360 (solo opción Dashboard)
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>InvCore360</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Fuentes y estilos externos -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <style>
        body {
            background: #1b1f2a;
            color: #e5e7eb;
            font-family: 'Inter', sans-serif;
        }

        .dashboard-content {
            max-width: 1500px;
            margin: 40px auto;
            padding: 0 1.5rem;
        }

        .dashboard-header {
            padding: 2rem;
            background: #232733;
            border-radius: 1.2rem;
            border: 1px solid #2d323f;
            box-shadow: 0 4px 24px rgba(0,0,0,0.25);
            margin-bottom: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .dashboard-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: #fff;
            display: flex;
            align-items: center;
            gap: .6rem;
        }

        .nav-dashboard {
            display: flex;
            gap: 1rem;
        }

            .nav-dashboard a {
                color: #e5e7eb;
                font-size: 1.2rem;
                text-decoration: none;
                padding: 0.6em;
                border-radius: 0.7em;
                transition: background 0.2s;
                display: flex;
                align-items: center;
                justify-content: center;
                width: 3.2rem;
                height: 3.2rem;
            }

                .nav-dashboard a:hover,
                .nav-dashboard .active {
                    background: #3b4252;
                    color: #fff;
                }
    </style>
</head>

<body>
    <div class="dashboard-content">

        <!-- Encabezado principal -->
        <header class="dashboard-header">
            <h1 class="dashboard-title">
                <i class="fas fa-cube"></i>
                InvCore360
            </h1>

            <!-- Navegación: solo Dashboard -->
            <nav class="nav-dashboard">
                <a href="@Url.Action("Dashboard", "Principal")" title="Volver al Dashboard">
                    <i class="fas fa-home"></i>
                </a>
            </nav>
        </header>

        <!-- Contenido dinámico -->
        <main>
            @RenderBody()
        </main>

    </div>
</body>
</html>
