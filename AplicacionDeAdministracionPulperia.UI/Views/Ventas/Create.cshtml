@model AplicacionDeAdministracionPulperia.Model.Venta

@{
    ViewData["Title"] = "Nueva Venta";
}

<h2>Nueva Venta</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TipoPago"></label>
        <input asp-for="TipoPago" class="form-control" />
        <span asp-validation-for="TipoPago" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cajero"></label>
        <input asp-for="Cajero" class="form-control" />
        <span asp-validation-for="Cajero" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumeroRecibo"></label>
        <input asp-for="NumeroRecibo" class="form-control" />
        <span asp-validation-for="NumeroRecibo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IdCliente"></label>
        <input asp-for="IdCliente" class="form-control" />
        <span asp-validation-for="IdCliente" class="text-danger"></span>
    </div>
    <!-- Aquí podrías agregar un editor para los detalles de la venta si lo necesitas -->
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
