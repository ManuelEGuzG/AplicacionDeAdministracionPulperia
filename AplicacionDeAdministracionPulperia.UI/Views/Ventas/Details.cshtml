@model AplicacionDeAdministracionPulperia.Model.Venta

@{
    ViewData["Title"] = "Detalle de Venta";
}

<h2>Detalle de Venta</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>

        <dt class="col-sm-2">Tipo de Pago</dt>
        <dd class="col-sm-10">@Model.TipoPago</dd>

        <dt class="col-sm-2">Cajero</dt>
        <dd class="col-sm-10">@Model.Cajero</dd>

        <dt class="col-sm-2">Número Recibo</dt>
        <dd class="col-sm-10">@Model.NumeroRecibo</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.IdCliente</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
