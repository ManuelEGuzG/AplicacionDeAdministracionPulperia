@model IEnumerable<AplicacionDeAdministracionPulperia.Model.MovimientoInventario>

@{
    ViewBag.Title = "Movimientos del Producto";
}

<h2>Movimientos de Inventario</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cantidad</th>
            <th>Tipo</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Fecha.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@m.Cantidad</td>
                <td>@m.TipoMovimiento</td>
                <td>@m.Notas</td>
            </tr>
        }
    </tbody>
</table>

<br />

<a href="@Url.Action("Create", "MovimientoInventario")" class="btn btn-primary">
    Registrar Movimiento
</a>
