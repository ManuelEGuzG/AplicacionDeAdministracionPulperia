@model AplicacionDeAdministracionPulperia.Model.Proveedor

@{
    ViewData["Title"] = "Editar Proveedor";
}

<h2 class="mt-3">Editar Proveedor</h2>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="IdProveedor" />

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <button class="btn btn-warning" type="submit">Actualizar</button>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
