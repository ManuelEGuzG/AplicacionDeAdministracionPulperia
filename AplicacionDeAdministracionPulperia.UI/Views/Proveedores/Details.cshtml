@model AplicacionDeAdministracionPulperia.Model.Proveedor

@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<h2 class="mt-3">Detalles del Proveedor</h2>

<div class="card p-3 mt-3">
    <dl class="row">
        <dt class="col-sm-3">ID</dt>
        <dd class="col-sm-9">@Model.IdProveedor</dd>

        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Correo</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Direccion</dd>
    </dl>

    <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.IdProveedor })">Editar</a>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Volver</a>
</div>
