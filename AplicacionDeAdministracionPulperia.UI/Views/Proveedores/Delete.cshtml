@model AplicacionDeAdministracionPulperia.Model.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h2 class="mt-3 text-danger">Eliminar Proveedor</h2>

<div class="alert alert-danger">
    ¿Está seguro que desea eliminar este proveedor?
</div>

<div class="card p-3 mt-3">
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>

        <dt class="col-sm-3">Correo</dt>
        <dd class="col-sm-9">@Model.Correo</dd>

        <dt class="col-sm-3">Dirección</dt>
        <dd class="col-sm-9">@Model.Direccion</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="IdProveedor" />
        <button class="btn btn-danger" type="submit">Eliminar</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancelar</a>
    </form>
</div>
