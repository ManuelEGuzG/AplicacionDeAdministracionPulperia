@model AplicacionDeAdministracionPulperia.Model.Producto

@{
    ViewBag.Title = "Eliminar Producto";
    Layout = null; // Deshabilita el Layout
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <h2 class="display-6 mb-4 text-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirmación de Eliminación
                </h2>

                <div class="alert alert-danger p-3 shadow-sm" role="alert">
                    <h4 class="alert-heading">¿Seguro que desea eliminar este producto?</h4>
                    <p>
                        **Esta acción es irreversible.** Una vez eliminado, el producto será removido permanentemente del inventario. Por favor, revise los detalles a continuación.
                    </p>
                </div>

                <div class="card shadow-lg border-danger">
                    <div class="card-header bg-danger text-white p-3">
                        <h5 class="mb-0"><i class="bi bi-box-seam"></i> Producto a Eliminar</h5>
                    </div>
                    <div class="card-body p-4">
                        <dl class="row">
                            <dt class="col-sm-3">Código:</dt>
                            <dd class="col-sm-9 fw-bold">@Model.Codigo</dd>

                            <dt class="col-sm-3">Nombre:</dt>
                            <dd class="col-sm-9 fw-bold fs-5">@Model.Nombre</dd>

                            <dt class="col-sm-3">Precio Venta:</dt>
                            <dd class="col-sm-9 text-danger">@Model.PrecioVenta.ToString("N2")</dd>

                            <dt class="col-sm-3">Existencias:</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-warning text-dark fs-6">@Model.Existencias</span>
                            </dd>

                            <dt class="col-sm-3">ID Producto:</dt>
                            <dd class="col-sm-9 text-muted">@Model.IdProducto</dd>
                        </dl>
                    </div>
                </div>

                <hr class="my-4" />

                <form asp-action="Delete" method="post" class="d-flex justify-content-end">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.IdProducto)

                    <a class="btn btn-outline-secondary me-3" href="@Url.Action("Index")">
                        <i class="bi bi-x-circle-fill"></i> Cancelar y Volver
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg shadow">
                        <i class="bi bi-trash-fill"></i> SÍ, Eliminar Producto
                    </button>
                </form>

            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>