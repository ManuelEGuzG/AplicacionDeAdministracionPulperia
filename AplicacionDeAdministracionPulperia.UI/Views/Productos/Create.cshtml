@model AplicacionDeAdministracionPulperia.Model.Producto

@{
    ViewBag.Title = "Crear Nuevo Producto";
    Layout = null; // Deshabilita el Layout
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>

    <div class="container mt-5 mb-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">

                <h2 class="display-6 mb-4">
                    <i class="bi bi-box-fill text-success"></i> @ViewBag.Title
                </h2>

                <div class="card shadow-lg border-0">
                    <div class="card-header bg-success text-white p-3">
                        <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Ingrese los detalles del producto</h5>
                    </div>
                    <div class="card-body p-4">

                        <form asp-action="Create" method="post">
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Código</label>
                                        @Html.TextBoxFor(m => m.Codigo, new { @class = "form-control", placeholder = "Ej: P001" })
                                        @Html.ValidationMessageFor(m => m.Codigo, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Nombre</label>
                                        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", placeholder = "Ej: Arroz 1kg" })
                                        @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Descripción</label>
                                        @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control", rows = 3, placeholder = "Detalles del producto" })
                                        @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">ID Proveedor</label>
                                        @Html.TextBoxFor(m => m.IdProveedor, new { @class = "form-control", placeholder = "Ej: 1 (Número de proveedor)" })
                                        @Html.ValidationMessageFor(m => m.IdProveedor, "", new { @class = "text-danger small" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Precio Venta (₡)</label>
                                        @Html.TextBoxFor(m => m.PrecioVenta, new { @class = "form-control", type = "number", step = "0.01", placeholder = "950.00" })
                                        @Html.ValidationMessageFor(m => m.PrecioVenta, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Precio Costo (₡)</label>
                                        @Html.TextBoxFor(m => m.PrecioCosto, new { @class = "form-control", type = "number", step = "0.01", placeholder = "800.00" })
                                        @Html.ValidationMessageFor(m => m.PrecioCosto, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Existencias (Unidades)</label>
                                        @Html.TextBoxFor(m => m.Existencias, new { @class = "form-control", type = "number", placeholder = "50" })
                                        @Html.ValidationMessageFor(m => m.Existencias, "", new { @class = "text-danger small" })
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Punto de Reorden</label>
                                        @Html.TextBoxFor(m => m.PuntoReorden, new { @class = "form-control", type = "number", placeholder = "Mínimo 10 unidades" })
                                        @Html.ValidationMessageFor(m => m.PuntoReorden, "", new { @class = "text-danger small" })
                                    </div>
                                </div>
                            </div>

                            <hr class="mt-4 mb-3" />

                            <div class="d-flex justify-content-end">
                                <a class="btn btn-outline-secondary me-2" href="@Url.Action("Index")">
                                    <i class="bi bi-x-circle-fill"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-success shadow">
                                    <i class="bi bi-check-circle-fill"></i> Guardar Producto
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>