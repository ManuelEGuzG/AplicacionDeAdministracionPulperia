@model AplicacionDeAdministracionPulperia.Model.Producto
@{
    Layout = null;
    ViewData["Title"] = "Detalle de Producto";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f1419 0%, #1b1f2a 100%);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .details-container {
            max-width: 900px;
            width: 100%;
        }

        .details-card {
            background: #1b1f2a;
            border-radius: 1.2rem;
            border: 1px solid #2a2f3c;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            overflow: hidden;
        }

        .details-header {
            padding: 2.5rem;
            background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
            border-bottom: 1px solid #2a2f3c;
            position: relative;
        }

            .details-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
            }

        .details-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .details-subtitle {
            font-size: 1rem;
            color: #94a3b8;
            font-weight: 400;
        }

        .product-code-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid rgba(59, 130, 246, 0.3);
            border-radius: 2rem;
            font-size: 0.875rem;
            color: #3b82f6;
            font-weight: 600;
            margin-top: 1rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 2rem;
            font-size: 0.875rem;
            font-weight: 600;
            margin-top: 1rem;
            margin-left: 0.5rem;
        }

        .status-low {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }

        .status-high {
            background: rgba(34, 197, 94, 0.1);
            border: 1px solid rgba(34, 197, 94, 0.3);
            color: #22c55e;
        }

        .details-body {
            padding: 2rem;
        }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .info-section {
            background: #0f1419;
            border: 1px solid #2a2f3c;
            border-radius: 0.8rem;
            padding: 1.5rem;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .section-title i {
                color: #3b82f6;
            }

        .info-item {
            margin-bottom: 1.25rem;
        }

            .info-item:last-child {
                margin-bottom: 0;
            }

        .info-label {
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            color: #94a3b8;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .info-value {
            font-size: 1.25rem;
            color: #ffffff;
            font-weight: 600;
        }

            .info-value.price-sell {
                color: #10b981;
                font-size: 1.5rem;
            }

            .info-value.price-cost {
                color: #3b82f6;
            }

        .stock-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            font-size: 1rem;
            font-weight: 600;
        }

        .stock-low {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: #ffffff;
            border: 1px solid #991b1b;
        }

        .stock-high {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
            color: #ffffff;
            border: 1px solid #047857;
        }

        .description-box {
            background: #0f1419;
            border: 1px solid #2a2f3c;
            border-radius: 0.8rem;
            padding: 1.5rem;
            margin-top: 1.5rem;
        }

        .description-text {
            color: #e2e8f0;
            line-height: 1.6;
            font-size: 0.95rem;
        }

        .description-empty {
            color: #64748b;
            font-style: italic;
        }

        .actions-section {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #2a2f3c;
            display: flex;
            gap: 1rem;
        }

        .btn {
            font-weight: 600;
            border-radius: 0.6rem;
            padding: 0.75rem 1.5rem;
            border: 1px solid transparent;
            transition: all 0.2s ease-in-out;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
        }

        .btn-warning {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
            border-color: #f59e0b;
            color: #ffffff;
            box-shadow: 0 2px 4px rgba(245, 158, 11, 0.3);
        }

            .btn-warning:hover {
                background: linear-gradient(135deg, #d97706 0%, #b45309 100%);
                border-color: #d97706;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(245, 158, 11, 0.4);
                color: #ffffff;
            }

        .btn-danger {
            background: linear-gradient(135deg, #991b1b 0%, #7f1d1d 100%);
            border-color: #991b1b;
            color: #ffffff;
            box-shadow: 0 2px 4px rgba(153, 27, 27, 0.3);
        }

            .btn-danger:hover {
                background: linear-gradient(135deg, #b91c1c 0%, #991b1b 100%);
                border-color: #b91c1c;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(153, 27, 27, 0.4);
                color: #ffffff;
            }

        .btn-secondary {
            background-color: #334155;
            border-color: #475569;
            color: #e2e8f0;
            flex: 1;
        }

            .btn-secondary:hover {
                background-color: #475569;
                border-color: #64748b;
                color: #ffffff;
                transform: translateY(-1px);
            }

        /* Animación de entrada */
        .details-card {
            animation: slideUp 0.4s ease-out;
        }

        keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .info-section {
            animation: fadeIn 0.4s ease-out backwards;
        }

            .info-section:nth-child(1) {
                animation-delay: 0.1s;
            }

            .info-section:nth-child(2) {
                animation-delay: 0.2s;
            }

        keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateX(-10px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        /* Responsive */
        media (max-width: 768px) {
            body

        {
            padding: 1rem;
        }

        .details-header {
            padding: 1.5rem;
        }

        .details-title {
            font-size: 1.75rem;
        }

        .details-body {
            padding: 1.5rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }

        .actions-section {
            flex-direction: column;
        }

        .info-value {
            font-size: 1.1rem;
        }

            .info-value.price-sell {
                font-size: 1.25rem;
            }

        }
    </style>
</head>
<body>
    <div class="details-container">
        <div class="details-card">
            <div class="details-header">
                <div class="details-title">
                    <i class="fas fa-box-open"></i> @Model.Nombre
                </div>
                <div class="details-subtitle">Información completa del producto</div>
                <div>
                    <span class="product-code-badge">
                        <i class="fas fa-barcode"></i>
                        Código: @Model.Codigo
                    </span>
                    @{
                        bool isLowStock = Model.Existencias <= Model.PuntoReorden;
                        string statusClass = isLowStock ? "status-low" : "status-high";
                        string statusText = isLowStock ? "Stock Bajo" : "Stock Normal";
                        string statusIcon = isLowStock ? "fa-exclamation-triangle" : "fa-check-circle";
                    }
                    <span class="status-badge @statusClass">
                        <i class="fas @statusIcon"></i>
                        @statusText
                    </span>
                </div>
            </div>

            <div class="details-body">
                <div class="info-grid">
                    <!-- Sección Financiera -->
                    <div class="info-section">
                        <div class="section-title">
                            <i class="fas fa-dollar-sign"></i>
                            Información Financiera
                        </div>

                        <div class="info-item">
                            <div class="info-label">Precio de Venta</div>
                            <div class="info-value price-sell">₡@Model.PrecioVenta.ToString("N2")</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Precio de Costo</div>
                            <div class="info-value price-cost">₡@Model.PrecioCosto.ToString("N2")</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Margen de Ganancia</div>
                            <div class="info-value">
                                @{
                                    var margen = ((Model.PrecioVenta - Model.PrecioCosto) / Model.PrecioCosto * 100);
                                }
                                @margen.ToString("N1")%
                            </div>
                        </div>
                    </div>

                    <!-- Sección Inventario -->
                    <div class="info-section">
                        <div class="section-title">
                            <i class="fas fa-warehouse"></i>
                            Control de Inventario
                        </div>

                        <div class="info-item">
                            <div class="info-label">Existencias Actuales</div>
                            <span class="stock-badge @(isLowStock ? "stock-low" : "stock-high")">
                                <i class="fas fa-box"></i>
                                @Model.Existencias unidades
                            </span>
                        </div>

                        <div class="info-item">
                            <div class="info-label">Punto de Reorden</div>
                            <div class="info-value" style="color: #f59e0b;">@Model.PuntoReorden unidades</div>
                        </div>

                        <div class="info-item">
                            <div class="info-label">ID Proveedor</div>
                            <div class="info-value">@Model.IdProveedor</div>
                        </div>
                    </div>
                </div>

                <!-- Información adicional -->
                <div class="info-section" style="grid-column: 1 / -1;">
                    <div class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información General
                    </div>
                    <div class="info-item">
                        <div class="info-label">Fecha de Registro</div>
                        <div class="info-value" style="font-size: 1rem;">
                            @Model.FechaCreacion.ToString("dd/MM/yyyy - HH:mm")
                        </div>
                    </div>
                </div>

                <!-- Descripción -->
                <div class="description-box">
                    <div class="section-title">
                        <i class="fas fa-align-left"></i>
                        Descripción del Producto
                    </div>
                    @if (string.IsNullOrEmpty(Model.Descripcion))
                    {
                        <p class="description-text description-empty">
                            No se ha proporcionado una descripción para este producto.
                        </p>
                    }
                    else
                    {
                        <p class="description-text">@Model.Descripcion</p>
                    }
                </div>

                <div class="actions-section">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver al Listado
                    </a>
                    <a href="@Url.Action("Edit", new { id = Model.IdProducto })" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Producto
                    </a>
                    <a href="@Url.Action("Delete", new { id = Model.IdProducto })" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Eliminar
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>