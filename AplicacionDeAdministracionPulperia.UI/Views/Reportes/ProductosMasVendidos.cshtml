@model List<AplicacionDeAdministracionPulperia.Model.ProductoMasVendido>

@{
    Layout = "~/Views/Shared/_LayoutMult.cshtml";
    ViewData["Title"] = "Productos Más Vendidos";
    var top = ViewBag.Top ?? 10;
}

<style>
    /* ===== CONTENEDORES ===== */
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 1.5rem;
    }

    .dashboard-header {
        padding: 2.5rem;
        background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 100%);
        }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        font-weight: 400;
    }

    /* ===== FILTROS ===== */
    .filter-container {
        background: #1b1f2a;
        border-radius: 1rem;
        padding: 1.5rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .filter-form {
        display: flex;
        gap: 1rem;
        align-items: flex-end;
    }

    .filter-group {
        flex: 0 0 200px;
    }

    .filter-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #e2e8f0;
        font-size: 0.875rem;
    }

    .filter-input {
        width: 100%;
        padding: 0.75rem 1rem;
        background-color: #0f1419;
        border: 1px solid #2a2f3c;
        border-radius: 0.6rem;
        color: #ffffff;
        font-size: 0.95rem;
        transition: all 0.2s ease-in-out;
    }

        .filter-input:focus {
            outline: none;
            border-color: #3b82f6;
            background-color: #1b1f2a;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
        }

    /* ===== BOTONES ===== */
    .btn {
        font-weight: 600;
        border-radius: 0.6rem;
        padding: 0.5rem 1rem;
        border: 1px solid transparent;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        border-color: #3b82f6;
        color: #ffffff;
        box-shadow: 0 2px 4px rgba(59, 130, 246, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            border-color: #2563eb;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(59, 130, 246, 0.4);
            color: #ffffff;
        }

    .btn-secondary {
        background-color: #334155;
        border-color: #475569;
        color: #e2e8f0;
    }

        .btn-secondary:hover {
            background-color: #475569;
            border-color: #64748b;
            color: #ffffff;
            transform: translateY(-1px);
        }

    /* ===== RANKING CARDS ===== */
    .products-grid {
        display: grid;
        gap: 1rem;
    }

    .product-rank-card {
        background: #1b1f2a;
        border-radius: 1rem;
        border: 1px solid #2a2f3c;
        padding: 1.5rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        display: grid;
        grid-template-columns: auto 1fr auto auto;
        gap: 1.5rem;
        align-items: center;
        animation: fadeIn 0.4s ease-out backwards;
    }

        .product-rank-card:hover {
            border-color: #3b82f6;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
            transform: translateX(4px);
        }

    .rank-number {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        font-weight: 800;
        color: #ffffff;
        flex-shrink: 0;
    }

    .rank-1 {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        box-shadow: 0 4px 12px rgba(251, 191, 36, 0.3);
    }

    .rank-2 {
        background: linear-gradient(135deg, #94a3b8 0%, #64748b 100%);
        box-shadow: 0 4px 12px rgba(148, 163, 184, 0.3);
    }

    .rank-3 {
        background: linear-gradient(135deg, #f97316 0%, #ea580c 100%);
        box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
    }

    .rank-other {
        background: linear-gradient(135deg, #334155 0%, #1e293b 100%);
    }

    .product-info {
        flex: 1;
        min-width: 0;
    }

    .product-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-subtitle {
        font-size: 0.875rem;
        color: #94a3b8;
    }

    .product-stats {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 0.5rem;
    }

    .stat-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .stat-label {
        font-size: 0.875rem;
        color: #94a3b8;
    }

    .stat-value {
        font-size: 1.1rem;
        font-weight: 700;
    }

    .quantity-value {
        color: #3b82f6;
    }

    .amount-value {
        color: #10b981;
    }

    .medal-icon {
        font-size: 2rem;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    }

    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #64748b;
        background: #1b1f2a;
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 0;
        }

    /* ===== ANIMACIONES ===== */
    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateX(-10px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    for $ i from 1 through 1 0 {
        .product-rank-card:nth-child(#{$i})

    {
        animation-delay: #

    {
        $i * 0.05
    }

    s;
    }
    }

    /* ===== UTILITIES ===== */
    .mb-4 {
        margin-bottom: 1.5rem;
    }

    /* ===== RESPONSIVE ===== */
    media (max-width: 768px) {
        .dashboard-container

    {
        padding: 0 1rem;
    }

    .dashboard-header {
        padding: 1.5rem;
    }

    .dashboard-title {
        font-size: 2rem;
    }

    .filter-form {
        flex-direction: column;
    }

    .filter-group {
        width: 100%;
    }

    .product-rank-card {
        grid-template-columns: auto 1fr;
        gap: 1rem;
    }

    .product-stats {
        grid-column: 1 / -1;
        flex-direction: row;
        justify-content: space-between;
        width: 100%;
    }

    .rank-number {
        width: 50px;
        height: 50px;
        font-size: 1.25rem;
    }

    .product-name {
        font-size: 1.1rem;
    }

    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="dashboard-title">
            <i class="fas fa-trophy"></i> Productos Más Vendidos
        </div>
        <div class="dashboard-subtitle">Top @top productos con mayor demanda — InvCore360</div>
    </div>

    <!-- Filtro -->
    <div class="filter-container">
        <form asp-action="ProductosMasVendidos" method="get" class="filter-form">
            <div class="filter-group">
                <label class="filter-label">Cantidad de Productos</label>
                <input type="number" name="top" class="filter-input" value="@top" min="1" max="50" />
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-filter"></i> Aplicar
            </button>
        </form>
    </div>

    <div class="mb-4">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a Reportes
        </a>
    </div>

    <!-- Ranking de Productos -->
    <div class="products-grid">
        @if (Model != null && Model.Any())
            {
                var rank = 0;
                @foreach (var producto in Model)
                {
                    rank++;
                    var rankClass = rank == 1 ? "rank-1" : (rank == 2 ? "rank-2" : (rank == 3 ? "rank-3" : "rank-other"));
                    var medalIcon = rank == 1 ? "🥇" : (rank == 2 ? "🥈" : (rank == 3 ? "🥉" : ""));

                    <div class="product-rank-card">
                        <div class="rank-number @rankClass">
                            @if (!string.IsNullOrEmpty(medalIcon))
                            {
                                <span class="medal-icon">@medalIcon</span>
                            }
                            else
                            {
                                <span>@rank</span>
                            }
                        </div>

                        <div class="product-info">
                            <div class="product-name" title="@producto.Nombre">
                                @producto.Nombre
                            </div>
                            <div class="product-subtitle">
                                Producto #@rank en ventas
                            </div>
                        </div>

                        <div class="product-stats">
                            <div class="stat-item">
                                <span class="stat-label">Unidades:</span>
                                <span class="stat-value quantity-value">@producto.CantidadVendida</span>
                            </div>
                        </div>

                        <div class="product-stats">
                            <div class="stat-item">
                                <span class="stat-label">Generado:</span>
                                <span class="stat-value amount-value">₡@producto.MontoGenerado.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-trophy"></i>
                    <p>No hay datos de productos vendidos disponibles.</p>
                </div>
            }
    </div>
</div>
