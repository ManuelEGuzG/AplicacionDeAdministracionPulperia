@{
    Layout = "~/Views/Shared/_LayoutMult.cshtml";
    ViewData["Title"] = "Reportes";
}

<style>
    /* ===== CONTENEDORES ===== */
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 1.5rem;
    }

    .dashboard-header {
        padding: 2.5rem;
        background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 50%, #f59e0b 100%);
        }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        font-weight: 400;
    }

    /* ===== GRID DE REPORTES ===== */
    .reports-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .report-card {
        background: #1b1f2a;
        border-radius: 1rem;
        border: 1px solid #2a2f3c;
        padding: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        animation: fadeIn 0.4s ease-out;
    }

        .report-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--card-color);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .report-card:hover {
            border-color: var(--card-color);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
            transform: translateY(-4px);
        }

            .report-card:hover::before {
                opacity: 1;
            }

    .report-icon-wrapper {
        width: 64px;
        height: 64px;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: var(--icon-bg);
        border: 1px solid var(--icon-border);
        margin-bottom: 1.5rem;
    }

    .report-icon {
        font-size: 2rem;
        color: var(--card-color);
    }

    .report-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.75rem;
    }

    .report-description {
        font-size: 0.95rem;
        color: #94a3b8;
        line-height: 1.5;
        margin-bottom: 1.5rem;
    }

    .report-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: var(--card-color);
        color: #ffffff;
        text-decoration: none;
        border-radius: 0.6rem;
        font-weight: 600;
        font-size: 0.95rem;
        transition: all 0.2s ease;
    }

        .report-link:hover {
            background: var(--card-color-hover);
            color: #ffffff;
            transform: translateX(4px);
        }

    /* Colores para cada tipo de reporte */
    .report-sales {
        --card-color: #fbbf24;
        --card-color-hover: #f59e0b;
        --icon-bg: rgba(251, 191, 36, 0.1);
        --icon-border: rgba(251, 191, 36, 0.2);
    }

    .report-products {
        --card-color: #3b82f6;
        --card-color-hover: #2563eb;
        --icon-bg: rgba(59, 130, 246, 0.1);
        --icon-border: rgba(59, 130, 246, 0.2);
    }

    .report-profit {
        --card-color: #10b981;
        --card-color-hover: #059669;
        --icon-bg: rgba(16, 185, 129, 0.1);
        --icon-border: rgba(16, 185, 129, 0.2);
    }

    .report-dashboard {
        --card-color: #8b5cf6;
        --card-color-hover: #7c3aed;
        --icon-bg: rgba(139, 92, 246, 0.1);
        --icon-border: rgba(139, 92, 246, 0.2);
    }

    .report-compare {
        --card-color: #ec4899;
        --card-color-hover: #db2777;
        --icon-bg: rgba(236, 72, 153, 0.1);
        --icon-border: rgba(236, 72, 153, 0.2);
    }

    /* ===== ANIMACIONES ===== */
    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .report-card:nth-child(1) {
        animation-delay: 0.1s;
    }

    .report-card:nth-child(2) {
        animation-delay: 0.2s;
    }

    .report-card:nth-child(3) {
        animation-delay: 0.3s;
    }

    .report-card:nth-child(4) {
        animation-delay: 0.4s;
    }

    .report-card:nth-child(5) {
        animation-delay: 0.5s;
    }

    /* ===== RESPONSIVE ===== */
    media (max-width: 768px) {
        .dashboard-container

    {
        padding: 0 1rem;
    }

    .dashboard-header {
        padding: 1.5rem;
    }

    .dashboard-title {
        font-size: 2rem;
    }

    .reports-grid {
        grid-template-columns: 1fr;
    }

    .report-card {
        padding: 1.5rem;
    }

    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="dashboard-title">
            <i class="fas fa-chart-bar"></i> Reportes
        </div>
        <div class="dashboard-subtitle">Análisis y estadísticas del sistema — InvCore360</div>
    </div>

    <div class="reports-grid">
        <!-- Resumen de Ventas -->
        <div class="report-card report-sales">
            <div class="report-icon-wrapper">
                <i class="fas fa-cash-register report-icon"></i>
            </div>
            <div class="report-title">Resumen de Ventas</div>
            <div class="report-description">
                Visualiza el resumen completo de todas las ventas realizadas, incluyendo totales y estadísticas generales.
            </div>
            <a asp-action="ResumenVentas" class="report-link">
                Ver Reporte <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <!-- Productos Más Vendidos -->
        <div class="report-card report-products">
            <div class="report-icon-wrapper">
                <i class="fas fa-trophy report-icon"></i>
            </div>
            <div class="report-title">Productos Más Vendidos</div>
            <div class="report-description">
                Descubre cuáles son los productos con mayor demanda y su impacto en las ventas totales.
            </div>
            <a asp-action="ProductosMasVendidos" class="report-link">
                Ver Reporte <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <!-- Rentabilidad -->
        <div class="report-card report-profit">
            <div class="report-icon-wrapper">
                <i class="fas fa-chart-line report-icon"></i>
            </div>
            <div class="report-title">Análisis de Rentabilidad</div>
            <div class="report-description">
                Analiza la rentabilidad del negocio con métricas detalladas de ganancias y costos.
            </div>
            <a asp-action="Rentabilidad" class="report-link">
                Ver Reporte <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <!-- Dashboard Completo -->
        <div class="report-card report-dashboard">
            <div class="report-icon-wrapper">
                <i class="fas fa-tachometer-alt report-icon"></i>
            </div>
            <div class="report-title">Dashboard Completo</div>
            <div class="report-description">
                Vista general con todas las métricas clave del negocio en un solo lugar.
            </div>
            <a asp-action="Dashboard" class="report-link">
                Ver Dashboard <i class="fas fa-arrow-right"></i>
            </a>
        </div>

        <!-- Comparativo -->
        <div class="report-card report-compare">
            <div class="report-icon-wrapper">
                <i class="fas fa-exchange-alt report-icon"></i>
            </div>
            <div class="report-title">Comparativo Mensual</div>
            <div class="report-description">
                Compara el rendimiento del mes actual con el mes anterior para identificar tendencias.
            </div>
            <a asp-action="Comparativo" class="report-link">
                Ver Comparativo <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>
