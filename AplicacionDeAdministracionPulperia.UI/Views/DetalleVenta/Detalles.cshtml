@model List<dynamic>

@{
    Layout = "~/Views/Shared/_LayoutMult.cshtml";
    ViewData["Title"] = "Detalles Extendidos de Venta";
    var venta = ViewBag.Venta as AplicacionDeAdministracionPulperia.Model.Venta;
    var idVenta = ViewBag.IdVenta;
}

<style>
    /* ===== CONTENEDORES ===== */
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 1.5rem;
    }

    .dashboard-header {
        padding: 2.5rem;
        background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 50%, #f59e0b 100%);
        }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        font-weight: 400;
    }

    /* ===== INFO CARD ===== */
    .info-card {
        background: #1b1f2a;
        border: 1px solid #2a2f3c;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 0.875rem;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .info-value {
        font-size: 1.25rem;
        color: #ffffff;
        font-weight: 600;
    }

    .price-value {
        color: #10b981;
    }

    /* ===== ALERTAS ===== */
    .alert {
        padding: 1rem 1.25rem;
        border-radius: 0.8rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }

    .alert i {
        font-size: 1.25rem;
    }

    /* ===== BOTONES ===== */
    .btn {
        font-weight: 600;
        border-radius: 0.6rem;
        padding: 0.5rem 1rem;
        border: 1px solid transparent;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
    }

    .btn-secondary {
        background-color: #334155;
        border-color: #475569;
        color: #e2e8f0;
    }

        .btn-secondary:hover {
            background-color: #475569;
            border-color: #64748b;
            color: #ffffff;
            transform: translateY(-1px);
        }

    /* ===== TABLA ===== */
    .dashboard-card {
        background: #1b1f2a;
        border-radius: 1.2rem;
        padding: 0;
        border: 1px solid #2a2f3c;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        color: #ffffff;
        background-color: #1b1f2a !important;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 0;
    }

        .table thead {
            background-color: #0f1419 !important;
        }

            .table thead th {
                color: #94a3b8;
                background-color: #0f1419 !important;
                border-bottom: 2px solid #2a2f3c;
                font-weight: 600;
                font-size: 0.875rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                padding: 1rem 1.5rem;
            }

        .table tbody tr {
            background-color: #1b1f2a !important;
            border-bottom: 1px solid #2a2f3c;
        }

            .table tbody tr:last-child {
                border-bottom: none;
            }

            .table tbody tr:hover {
                background-color: #242a38 !important;
                transition: background-color 0.15s ease-in-out;
            }

        .table td {
            background-color: transparent !important;
            border-color: #2a2f3c;
            vertical-align: middle;
            padding: 1rem 1.5rem;
            color: #ffffff;
        }

    /* ===== BADGES ===== */
    .badge-code {
        background: #334155;
        color: #94a3b8;
        padding: 0.4rem 0.9rem;
        border-radius: 0.5rem;
        font-weight: 600;
        font-size: 0.875rem;
        border: 1px solid #475569;
    }

    .profit-positive {
        color: #10b981;
    }

    .profit-negative {
        color: #ef4444;
    }

    /* ===== SUMMARY SECTION ===== */
    .summary-section {
        background: #0f1419;
        border: 1px solid #2a2f3c;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-top: 1.5rem;
    }

    .summary-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    .summary-item {
        text-align: center;
    }

    .summary-label {
        font-size: 0.875rem;
        color: #94a3b8;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .summary-value {
        font-size: 1.75rem;
        font-weight: 700;
    }

    /* ===== EMPTY STATE ===== */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #64748b;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 0;
        }

    /* ===== UTILITIES ===== */
    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-end {
        text-align: right;
    }

    .text-center {
        text-align: center;
    }

    /* ===== RESPONSIVE ===== */
    media (max-width: 768px) {
        .dashboard-container {
            padding: 0 1rem;
        }

        .dashboard-header {
            padding: 1.5rem;
        }

        .dashboard-title {
            font-size: 2rem;
        }

        .info-grid,
        .summary-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="dashboard-title">
            <i class="fas fa-file-invoice-dollar"></i> Detalles Extendidos
        </div>
        <div class="dashboard-subtitle">
            @if (venta != null)
            {
                <text>Análisis completo de venta — Recibo: @venta.NumeroRecibo</text>
            }
            else
            {
                <text>Análisis completo de venta — InvCore360</text>
            }
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["Error"]</span>
            </div>
    }

    @if (venta != null)
    {
            <div class="info-card">
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Fecha</span>
                        <span class="info-value">@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Tipo de Pago</span>
                        <span class="info-value">@venta.TipoPago</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Cajero</span>
                        <span class="info-value">@venta.Cajero</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Total Venta</span>
                        <span class="info-value price-value">₡@venta.Total.ToString("N2")</span>
                    </div>
                </div>
            </div>
    }

    <div class="mb-4">
        <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            <span>Volver a Ventas</span>
        </a>
        @if (idVenta != null)
        {
                <a asp-action="Index" asp-route-idVenta="@idVenta" class="btn btn-secondary">
                    <i class="fas fa-list"></i>
                    <span>Vista Simple</span>
                </a>
        }
    </div>

    <div class="dashboard-card">
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Producto</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end">Precio Unit.</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-end">Ganancia</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var detalle in Model)
                        {
                                    <tr>
                                        <td>
                                            <span class="badge-code">@detalle.CodigoProducto</span>
                                        </td>
                                        <td><strong>@detalle.NombreProducto</strong></td>
                                        <td class="text-center">@detalle.Cantidad</td>
                                        <td class="text-end price-value">₡@detalle.PrecioUnitario.ToString("N2")</td>
                                        <td class="text-end price-value">₡@detalle.Subtotal.ToString("N2")</td>
                                        <td class="text-end">
                                    @{
                                        var gananciaClass = detalle.Ganancia >= 0 ? "profit-positive" : "profit-negative";
                                    }
                                            <span class="@gananciaClass">
                                                <strong>₡@detalle.Ganancia.ToString("N2")</strong>
                                            </span>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="6">
                                    <div class="empty-state">
                                        <i class="fas fa-inbox"></i>
                                        <p>No hay detalles para esta venta.</p>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (Model != null && Model.Any())
        {
            var totalVenta = Model.Sum(d => d.Subtotal);
            var totalGanancia = Model.Sum(d => d.Ganancia);
            var margenPromedio = totalVenta > 0 ? (totalGanancia / totalVenta * 100) : 0;

                <div class="summary-section">
                    <div class="summary-grid">
                        <div class="summary-item">
                            <div class="summary-label">Total Venta</div>
                            <div class="summary-value price-value">₡@totalVenta.ToString("N2")</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Ganancia Total</div>
                            <div class="summary-value" style="color: #10b981;">₡@totalGanancia.ToString("N2")</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Margen Promedio</div>
                            <div class="summary-value" style="color: #f59e0b;">@margenPromedio.ToString("N1")%</div>
                        </div>
                        <div class="summary-item">
                            <div class="summary-label">Items Vendidos</div>
                            <div class="summary-value" style="color: #60a5fa;">@Model.Count</div>
                        </div>
                    </div>
                </div>
        }
    </div>
</div>