@model IEnumerable<AplicacionDeAdministracionPulperia.Model.DetalleVenta>

@{
    Layout = "~/Views/Shared/_LayoutMult.cshtml";
    ViewData["Title"] = "Buscar Detalles de Venta";
}

<style>
    /* ===== CONTENEDORES ===== */
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 1.5rem;
    }

    .dashboard-header {
        padding: 2.5rem;
        background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 50%, #f59e0b 100%);
        }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        font-weight: 400;
    }

    /* ===== BARRA DE BÚSQUEDA ===== */
    .search-container {
        background: #1b1f2a;
        border-radius: 1rem;
        padding: 1.5rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .search-form {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
        align-items: flex-end;
    }

    .search-group {
        flex: 1;
        min-width: 200px;
    }

    .search-label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 600;
        color: #e2e8f0;
        font-size: 0.875rem;
    }

    .search-input {
        width: 100%;
        padding: 0.75rem 1rem;
        background-color: #0f1419;
        border: 1px solid #2a2f3c;
        border-radius: 0.6rem;
        color: #ffffff;
        font-size: 0.95rem;
        transition: all 0.2s ease-in-out;
    }

        .search-input:focus {
            outline: none;
            border-color: #8b5cf6;
            background-color: #1b1f2a;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }

        .search-input::placeholder {
            color: #64748b;
        }

    .search-buttons {
        display: flex;
        gap: 0.75rem;
    }

    /* ===== ALERTAS ===== */
    .alert {
        padding: 1rem 1.25rem;
        border-radius: 0.8rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }

    .alert-info {
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.3);
        color: #60a5fa;
    }

    .alert i {
        font-size: 1.25rem;
    }

    /* ===== BOTONES ===== */
    .btn {
        font-weight: 600;
        border-radius: 0.6rem;
        padding: 0.5rem 1rem;
        border: 1px solid transparent;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-primary {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        border-color: #8b5cf6;
        color: #ffffff;
        box-shadow: 0 2px 4px rgba(139, 92, 246, 0.3);
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
            border-color: #7c3aed;
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(139, 92, 246, 0.4);
            color: #ffffff;
        }

    .btn-secondary {
        background-color: #334155;
        border-color: #475569;
        color: #e2e8f0;
    }

        .btn-secondary:hover {
            background-color: #475569;
            border-color: #64748b;
            color: #ffffff;
            transform: translateY(-1px);
        }

    .btn-info {
        background-color: #334155;
        border-color: #475569;
        color: #e2e8f0;
    }

        .btn-info:hover {
            background-color: #475569;
            border-color: #64748b;
            color: #ffffff;
            transform: translateY(-1px);
        }

    .btn-sm {
        padding: 0.35rem 0.75rem;
        font-size: 0.875rem;
    }

    /* ===== TABLA ===== */
    .dashboard-card {
        background: #1b1f2a;
        border-radius: 1.2rem;
        padding: 0;
        border: 1px solid #2a2f3c;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .table-wrapper {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        color: #ffffff;
        background-color: #1b1f2a !important;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 0;
    }

        .table thead {
            background-color: #0f1419 !important;
        }

            .table thead th {
                color: #94a3b8;
                background-color: #0f1419 !important;
                border-bottom: 2px solid #2a2f3c;
                font-weight: 600;
                font-size: 0.875rem;
                text-transform: uppercase;
                letter-spacing: 0.05em;
                padding: 1rem 1.5rem;
            }

        .table tbody tr {
            background-color: #1b1f2a !important;
            border-bottom: 1px solid #2a2f3c;
        }

            .table tbody tr:last-child {
                border-bottom: none;
            }

            .table tbody tr:hover {
                background-color: #242a38 !important;
                transition: background-color 0.15s ease-in-out;
            }

        .table td {
            background-color: transparent !important;
            border-color: #2a2f3c;
            vertical-align: middle;
            padding: 1rem 1.5rem;
            color: #ffffff;
        }

    .price-value {
        color: #10b981;
        font-weight: 600;
    }

    /* ===== EMPTY STATE ===== */
    .empty-state {
        text-align: center;
        padding: 3rem 2rem;
        color: #64748b;
    }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 0;
        }

    /* ===== UTILITIES ===== */
    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .text-end {
        text-align: right;
    }

    .text-center {
        text-align: center;
    }

    /* ===== RESPONSIVE ===== */
    media (max-width: 768px) {
        .dashboard-container {
            padding: 0 1rem;
        }

        .dashboard-header {
            padding: 1.5rem;
        }

        .dashboard-title {
            font-size: 2rem;
        }

        .search-form {
            flex-direction: column;
        }

        .search-group {
            width: 100%;
        }

        .search-buttons {
            width: 100%;
            flex-direction: column;
        }

            .search-buttons .btn {
                width: 100%;
            }
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="dashboard-title">
            <i class="fas fa-search"></i> Buscar Detalles de Venta
        </div>
        <div class="dashboard-subtitle">Filtra los detalles por venta o producto — InvCore360</div>
    </div>

    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                <span>@TempData["Error"]</span>
            </div>
    }

    <!-- Búsqueda -->
    <div class="search-container">
        <form asp-action="Buscar" method="get" class="search-form">
            <div class="search-group">
                <label class="search-label">ID de Venta</label>
                <input type="number" name="idVenta" class="search-input" 
                       placeholder="Ingresa el ID de la venta..." 
                       value="@ViewBag.IdVenta" />
            </div>
            <div class="search-group">
                <label class="search-label">ID de Producto</label>
                <input type="number" name="idProducto" class="search-input" 
                       placeholder="Ingresa el ID del producto..." 
                       value="@ViewBag.IdProducto" />
            </div>
            <div class="search-buttons">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Buscar
                </button>
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Limpiar
                </a>
            </div>
        </form>
    </div>

    @if (ViewBag.IdVenta != null || ViewBag.IdProducto != null)
    {
            <div class="alert alert-info">
                <i class="fas fa-filter"></i>
                <span>
                    Mostrando resultados filtrados
                @if (ViewBag.IdVenta != null)
                {
                    <text>para venta #@ViewBag.IdVenta</text>
                }
                @if (ViewBag.IdProducto != null)
                {
                    <text>y producto #@ViewBag.IdProducto</text>
                }
                </span>
            </div>
    }

    <!-- Botón Volver -->
    <div class="mb-4">
        <a asp-controller="Ventas" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a Ventas
        </a>
    </div>

    <!-- Tabla de Resultados -->
    <div class="dashboard-card">
        <div class="table-wrapper">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID Detalle</th>
                        <th>ID Venta</th>
                        <th>ID Producto</th>
                        <th class="text-center">Cantidad</th>
                        <th class="text-end">Precio Unit.</th>
                        <th class="text-end">Subtotal</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var detalle in Model)
                        {
                                    <tr>
                                        <td><strong>#@detalle.IdDetalle</strong></td>
                                        <td>Venta #@detalle.IdVenta</td>
                                        <td>Producto #@detalle.IdProducto</td>
                                        <td class="text-center">@detalle.Cantidad</td>
                                        <td class="text-end price-value">₡@detalle.PrecioUnitario.ToString("N2")</td>
                                        <td class="text-end price-value">₡@detalle.Subtotal.ToString("N2")</td>
                                        <td class="text-end">
                                            <a asp-action="Details" asp-route-id="@detalle.IdDetalle" 
                                               class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Ver
                                            </a>
                                        </td>
                                    </tr>
                        }
                    }
                    else
                    {
                            <tr>
                                <td colspan="7">
                                    <div class="empty-state">
                                        <i class="fas fa-search"></i>
                                        <p>
                                        @if (ViewBag.IdVenta != null || ViewBag.IdProducto != null)
                                        {
                                            <text>No se encontraron detalles con los criterios de búsqueda especificados.</text>
                                        }
                                        else
                                        {
                                            <text>Utiliza los filtros de búsqueda para encontrar detalles de venta específicos.</text>
                                        }
                                        </p>
                                    </div>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>