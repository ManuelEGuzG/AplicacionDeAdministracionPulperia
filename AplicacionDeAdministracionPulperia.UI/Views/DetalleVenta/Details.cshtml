@model AplicacionDeAdministracionPulperia.Model.DetalleVenta
@{
    Layout = null;
    ViewData["Title"] = "Detalle de Item";
    var producto = ViewBag.Producto as AplicacionDeAdministracionPulperia.Model.Producto;
    var venta = ViewBag.Venta as AplicacionDeAdministracionPulperia.Model.Venta;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f1419 0%, #1b1f2a 100%);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .details-container {
            max-width: 900px;
            width: 100%;
        }

        .details-card {
            background: #1b1f2a;
            border-radius: 1.2rem;
            border: 1px solid #2a2f3c;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            overflow: hidden;
            animation: slideUp 0.4s ease-out;
        }

        keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .details-header {
            padding: 2.5rem;
            background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
            border-bottom: 1px solid #2a2f3c;
            position: relative;
        }

            .details-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #3b82f6 0%, #8b5cf6 50%, #ec4899 100%);
            }

        .details-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .details-subtitle {
            font-size: 1rem;
            color: #94a3b8;
            font-weight: 400;
        }

        .item-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 1rem;
            background: rgba(59, 130, 246, 0.1);
            border: 1px solid rgba(59, 130, 246, 0.3);
            border-radius: 2rem;
            font-size: 0.875rem;
            color: #3b82f6;
            font-weight: 600;
            margin-top: 1rem;
        }

        .details-body {
            padding: 2rem;
        }

        .info-section {
            background: #0f1419;
            border: 1px solid #2a2f3c;
            border-radius: 0.8rem;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            animation: fadeIn 0.4s ease-out backwards;
        }

        keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateX(-10px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .info-section:nth-child(1) {
            animation-delay: 0.1s;
        }

        .info-section:nth-child(2) {
            animation-delay: 0.2s;
        }

        .info-section:nth-child(3) {
            animation-delay: 0.3s;
        }

        .section-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            .section-title i {
                color: #3b82f6;
            }

        .info-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .info-item {
            display: flex;
            flex-direction: column;
        }

        .info-label {
            font-size: 0.875rem;
            color: #94a3b8;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .info-value {
            font-size: 1.25rem;
            color: #ffffff;
            font-weight: 600;
        }

        .price-value {
            color: #10b981;
        }

        .profit-value {
            color: #10b981;
            font-size: 1.5rem;
        }

        .profit-negative {
            color: #ef4444;
        }

        .actions-section {
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #2a2f3c;
            display: flex;
            gap: 1rem;
        }

        .btn {
            font-weight: 600;
            border-radius: 0.6rem;
            padding: 0.75rem 1.5rem;
            border: 1px solid transparent;
            transition: all 0.2s ease-in-out;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
            flex: 1;
        }

        .btn-secondary {
            background-color: #334155;
            border-color: #475569;
            color: #e2e8f0;
        }

            .btn-secondary:hover {
                background-color: #475569;
                border-color: #64748b;
                color: #ffffff;
                transform: translateY(-1px);
            }

        .btn-primary {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            border-color: #2563eb;
            color: #ffffff;
            box-shadow: 0 2px 4px rgba(37, 99, 235, 0.3);
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
                border-color: #1d4ed8;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(37, 99, 235, 0.4);
                color: #ffffff;
            }

        media (max-width: 768px) {
            body {
                padding: 1rem;
            }

            .details-header {
                padding: 1.5rem;
            }

            .details-title {
                font-size: 1.75rem;
            }

            .details-body {
                padding: 1.5rem;
            }

            .info-grid {
                grid-template-columns: 1fr;
            }

            .actions-section {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="details-container">
        <div class="details-card">
            <div class="details-header">
                <div class="details-title">
                    <i class="fas fa-file-invoice-dollar"></i> Detalle de Item
                </div>
                <div class="details-subtitle">Información completa del item de venta</div>
                <div class="item-badge">
                    <i class="fas fa-hashtag"></i>
                    ID: @Model.IdDetalle
                </div>
            </div>

            <div class="details-body">
                <!-- Información del Producto -->
                @if (producto != null)
                {
                        <div class="info-section">
                            <div class="section-title">
                                <i class="fas fa-box"></i>
                                Información del Producto
                            </div>
                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-label">Código</div>
                                    <div class="info-value">@producto.Codigo</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Nombre</div>
                                    <div class="info-value">@producto.Nombre</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Precio Costo</div>
                                    <div class="info-value" style="color: #f59e0b;">₡@producto.PrecioCosto.ToString("N2")</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Existencias Actuales</div>
                                    <div class="info-value" style="color: #60a5fa;">@producto.Existencias unidades</div>
                                </div>
                            </div>
                        </div>
                }

                <!-- Información del Detalle -->
                <div class="info-section">
                    <div class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Detalles de la Transacción
                    </div>
                    <div class="info-grid">
                        <div class="info-item">
                            <div class="info-label">Cantidad Vendida</div>
                            <div class="info-value">@Model.Cantidad unidades</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Precio Unitario</div>
                            <div class="info-value price-value">₡@Model.PrecioUnitario.ToString("N2")</div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Subtotal</div>
                            <div class="info-value price-value">₡@Model.Subtotal.ToString("N2")</div>
                        </div>
                        @if (producto != null)
                        {
                            var ganancia = Model.Subtotal - (producto.PrecioCosto * Model.Cantidad);
                            var margen = Model.Subtotal > 0 ? (ganancia / Model.Subtotal * 100) : 0;
                            var gananciaClass = ganancia >= 0 ? "profit-value" : "profit-value profit-negative";

                                <div class="info-item">
                                    <div class="info-label">Ganancia Obtenida</div>
                                    <div class="@gananciaClass">₡@ganancia.ToString("N2")</div>
                                </div>
                                <div class="info-item" style="grid-column: 1 / -1;">
                                    <div class="info-label">Margen de Ganancia</div>
                                    <div class="info-value" style="color: #fbbf24;">@margen.ToString("N1")%</div>
                                </div>
                        }
                    </div>
                </div>

                <!-- Información de la Venta -->
                @if (venta != null)
                {
                        <div class="info-section">
                            <div class="section-title">
                                <i class="fas fa-receipt"></i>
                                Información de la Venta
                            </div>
                            <div class="info-grid">
                                <div class="info-item">
                                    <div class="info-label">Número de Recibo</div>
                                    <div class="info-value">@venta.NumeroRecibo</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Fecha y Hora</div>
                                    <div class="info-value">@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Cajero</div>
                                    <div class="info-value">@venta.Cajero</div>
                                </div>
                                <div class="info-item">
                                    <div class="info-label">Tipo de Pago</div>
                                    <div class="info-value">@venta.TipoPago</div>
                                </div>
                                <div class="info-item" style="grid-column: 1 / -1;">
                                    <div class="info-label">Total de la Venta</div>
                                    <div class="info-value price-value" style="font-size: 1.5rem;">₡@venta.Total.ToString("N2")</div>
                                </div>
                            </div>
                        </div>
                }

                <div class="actions-section">
                    <a href="@Url.Action("Index", "Ventas")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Volver a Ventas
                    </a>
                    @if (venta != null)
                    {
                            <a href="@Url.Action("Index", "DetalleVenta", new { idVenta = venta.IdVenta })" class="btn btn-primary">
                                <i class="fas fa-list"></i> Ver Todos los Detalles
                            </a>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>