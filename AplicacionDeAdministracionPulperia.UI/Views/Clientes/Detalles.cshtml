@model IEnumerable<dynamic>

@{
    Layout = "~/Views/Shared/_LayoutMult.cshtml";
    ViewData["Title"] = "Clientes - Detalles Completos";
}

<style>
    /* ===== CONTENEDORES ===== */
    .dashboard-container {
        max-width: 1600px;
        margin: 40px auto;
        padding: 0 1.5rem;
    }

    .dashboard-header {
        padding: 2.5rem;
        background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
        border-radius: 1.2rem;
        border: 1px solid #2a2f3c;
        margin-bottom: 2.5rem;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
        position: relative;
        overflow: hidden;
    }

        .dashboard-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #8b5cf6 0%, #ec4899 50%, #f59e0b 100%);
        }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: #ffffff;
        margin-bottom: 0.5rem;
        letter-spacing: -0.02em;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #94a3b8;
        font-weight: 400;
    }

    /* ===== ALERTAS ===== */
    .alert {
        padding: 1rem 1.25rem;
        border-radius: 0.8rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        animation: slideDown 0.3s ease-out;
    }

    .alert-success {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        color: #22c55e;
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #ef4444;
    }

    .alert i {
        font-size: 1.25rem;
    }

    keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    /* ===== BOTONES ===== */
    .btn {
        font-weight: 600;
        border-radius: 0.6rem;
        padding: 0.5rem 1rem;
        border: 1px solid transparent;
        transition: all 0.2s ease-in-out;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-secondary {
        background-color: #334155;
        border-color: #475569;
        color: #e2e8f0;
    }

        .btn-secondary:hover {
            background-color: #475569;
            border-color: #64748b;
            color: #ffffff;
            transform: translateY(-1px);
        }

    /* ===== TARJETAS DE CLIENTES ===== */
    .clients-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .client-card {
        background: #1b1f2a;
        border-radius: 1rem;
        border: 1px solid #2a2f3c;
        padding: 1.75rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
        animation: fadeIn 0.4s ease-out;
    }

    keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .client-card:hover {
        border-color: #374151;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
        transform: translateY(-2px);
    }

    .client-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid #2a2f3c;
    }

    .client-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: #ffffff;
        font-weight: 700;
        flex-shrink: 0;
    }

    .client-info {
        flex: 1;
        min-width: 0;
    }

    .client-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 0.25rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .client-date {
        font-size: 0.875rem;
        color: #94a3b8;
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

        .client-date i {
            font-size: 0.75rem;
        }

    .client-details {
        display: grid;
        gap: 1rem;
    }

    .detail-item {
        background: #0f1419;
        border: 1px solid #2a2f3c;
        border-radius: 0.6rem;
        padding: 1rem;
    }

    .detail-label {
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #64748b;
        margin-bottom: 0.5rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

        .detail-label i {
            font-size: 0.875rem;
        }

    .detail-value {
        font-size: 1rem;
        color: #ffffff;
        font-weight: 500;
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #64748b;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1.5rem;
            opacity: 0.5;
        }

        .empty-state h3 {
            font-size: 1.5rem;
            color: #94a3b8;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            font-size: 1rem;
            margin-bottom: 0;
        }

    /* ===== RESPONSIVE ===== */
    media (max-width: 768px) {
        .dashboard-container

    {
        padding: 0 1rem;
    }

    .dashboard-header {
        padding: 1.5rem;
    }

    .dashboard-title {
        font-size: 2rem;
    }

    .clients-grid {
        grid-template-columns: 1fr;
    }

    .client-card {
        padding: 1.5rem;
    }

    .client-avatar {
        width: 50px;
        height: 50px;
        font-size: 1.25rem;
    }

    .client-name {
        font-size: 1.1rem;
    }

    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="dashboard-title">
            <i class="fas fa-list-ul"></i> Clientes - Detalles Completos
        </div>
        <div class="dashboard-subtitle">Vista detallada de todos los clientes — InvCore360</div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i>
            <span>@TempData["Success"]</span>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i>
            <span>@TempData["Error"]</span>
        </div>
    }

    <div style="margin-bottom: 1.5rem;">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Volver a Vista Normal
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="clients-grid">
            @foreach (var cliente in Model)
            {
                <div class="client-card">
                    <div class="client-header">
                        <div class="client-avatar">
                            @cliente.Nombre.ToString().Substring(0, 1).ToUpper()
                        </div>
                        <div class="client-info">
                            <div class="client-name" title="@cliente.Nombre">
                                @cliente.Nombre
                            </div>
                            <div class="client-date">
                                <i class="fas fa-calendar"></i>
                                Registrado el @(((DateTime)cliente.FechaCreacion).ToString("dd/MM/yyyy"))
                            </div>
                        </div>
                    </div>

                    <div class="client-details">
                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-phone"></i>
                                Teléfono
                            </div>
                            <div class="detail-value">@cliente.Telefono</div>
                        </div>

                        <div class="detail-item">
                            <div class="detail-label">
                                <i class="fas fa-id-card"></i>
                                ID de Cliente
                            </div>
                            <div class="detail-value">#@cliente.IdCliente</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-users"></i>
            <h3>No hay clientes registrados</h3>
            <p>Crea tu primer cliente para verlo aquí.</p>
        </div>
    }
</div>