@model AplicacionDeAdministracionPulperia.Model.Cliente
@{
    Layout = null;
    ViewData["Title"] = "Editar Cliente";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #0f1419 0%, #1b1f2a 100%);
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }

        .form-container {
            max-width: 600px;
            width: 100%;
        }

        .form-card {
            background: #1b1f2a;
            border-radius: 1.2rem;
            border: 1px solid #2a2f3c;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
            overflow: hidden;
        }

        .form-header {
            padding: 2.5rem;
            background: linear-gradient(135deg, #1b1f2a 0%, #232835 100%);
            border-bottom: 1px solid #2a2f3c;
            position: relative;
        }

            .form-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 4px;
                background: linear-gradient(90deg, #f59e0b 0%, #fbbf24 100%);
            }

        .form-title {
            font-size: 2rem;
            font-weight: 800;
            color: #ffffff;
            margin-bottom: 0.5rem;
            letter-spacing: -0.02em;
        }

        .form-subtitle {
            font-size: 1rem;
            color: #94a3b8;
            font-weight: 400;
        }

        .form-body {
            padding: 2rem;
        }

        .info-box {
            background: rgba(245, 158, 11, 0.1);
            border: 1px solid rgba(245, 158, 11, 0.3);
            border-radius: 0.8rem;
            padding: 1rem 1.25rem;
            margin-bottom: 2rem;
            display: flex;
            gap: 0.75rem;
            align-items: center;
        }

        .info-icon {
            font-size: 1.25rem;
            color: #f59e0b;
            flex-shrink: 0;
        }

        .info-text {
            font-size: 0.9rem;
            color: #cbd5e1;
            line-height: 1.5;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .control-label {
            display: block;
            margin-bottom: 0.5rem;
            font-weight: 600;
            color: #e2e8f0;
            font-size: 0.925rem;
        }

            .control-label::after {
                content: ' *';
                color: #ef4444;
            }

        .form-control {
            width: 100%;
            padding: 0.75rem 1rem;
            background-color: #0f1419;
            border: 1px solid #2a2f3c;
            border-radius: 0.6rem;
            color: #ffffff;
            font-size: 1rem;
            transition: all 0.2s ease-in-out;
        }

            .form-control:focus {
                outline: none;
                border-color: #f59e0b;
                background-color: #1b1f2a;
                box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.1);
            }

            .form-control::placeholder {
                color: #64748b;
            }

        .text-danger {
            display: block;
            margin-top: 0.5rem;
            font-size: 0.875rem;
            color: #ef4444;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

            .text-danger::before {
                content: '\f06a';
                font-family: 'Font Awesome 6 Free';
                font-weight: 900;
            }

        .form-actions {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid #2a2f3c;
        }

        .btn {
            font-weight: 600;
            border-radius: 0.6rem;
            padding: 0.75rem 1.5rem;
            border: 1px solid transparent;
            transition: all 0.2s ease-in-out;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            cursor: pointer;
            font-size: 1rem;
            text-decoration: none;
        }

        .btn-primary {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            border-color: #2563eb;
            color: #ffffff;
            box-shadow: 0 2px 4px rgba(37, 99, 235, 0.3);
            flex: 1;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #1d4ed8 0%, #1e40af 100%);
                border-color: #1d4ed8;
                transform: translateY(-1px);
                box-shadow: 0 4px 8px rgba(37, 99, 235, 0.4);
            }

            .btn-primary:active {
                transform: translateY(0);
            }

        .btn-secondary {
            background-color: #334155;
            border-color: #475569;
            color: #e2e8f0;
        }

            .btn-secondary:hover {
                background-color: #475569;
                border-color: #64748b;
                color: #ffffff;
                transform: translateY(-1px);
            }

        .input-wrapper {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            pointer-events: none;
        }

        .form-control-with-icon {
            padding-left: 2.75rem;
        }

        /* Animación de entrada */
        .form-card {
            animation: slideUp 0.4s ease-out;
        }

        keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .form-group {
            animation: fadeIn 0.4s ease-out backwards;
        }

            .form-group:nth-child(2) {
                animation-delay: 0.1s;
            }

            .form-group:nth-child(3) {
                animation-delay: 0.2s;
            }

       keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateX(-10px);
        }

        to {
            opacity: 1;
            transform: translateX(0);
        }

        }

        /* Responsive */
        media (max-width: 768px) {
            body

        {
            padding: 1rem;
        }

        .form-header {
            padding: 1.5rem;
        }

        .form-title {
            font-size: 1.75rem;
        }

        .form-body {
            padding: 1.5rem;
        }

        .form-actions {
            flex-direction: column;
        }

        }

        .btn-primary:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }

            .btn-primary:disabled:hover {
                transform: none;
            }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-card">
            <div class="form-header">
                <div class="form-title">
                    <i class="fas fa-user-edit"></i> Editar Cliente
                </div>
                <div class="form-subtitle">Modifica la información del cliente</div>
            </div>

            <div class="form-body">
                <div class="info-box">
                    <div class="info-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <div class="info-text">
                        Los cambios se guardarán inmediatamente al confirmar. Asegúrate de verificar la información antes de guardar.
                    </div>
                </div>

                <form asp-action="Edit" method="post" id="editForm">
                    <input type="hidden" asp-for="IdCliente" />

                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre Completo</label>
                        <div class="input-wrapper">
                            <i class="fas fa-user input-icon"></i>
                            <input asp-for="Nombre" class="form-control form-control-with-icon" placeholder="Ingresa el nombre del cliente" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Teléfono de Contacto</label>
                        <div class="input-wrapper">
                            <i class="fas fa-phone input-icon"></i>
                            <input asp-for="Telefono" class="form-control form-control-with-icon" placeholder="Ingresa el número de teléfono" />
                        </div>
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="fas fa-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.getElementById('editForm').addEventListener('submit', function() {
            const submitBtn = document.getElementById('submitBtn');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Guardando...';
        });

        let formModified = false;
        const form = document.getElementById('editForm');
        const inputs = form.querySelectorAll('input[type="text"], input[type="tel"]');

        inputs.forEach(input => {
            input.addEventListener('input', () => {
                formModified = true;
            });
        });

        document.querySelector('.btn-secondary').addEventListener('click', function(e) {
            if (formModified) {
                if (!confirm('Tienes cambios sin guardar. ¿Estás seguro que deseas salir?')) {
                    e.preventDefault();
                }
            }
        });
    </script>
</body>
</html>